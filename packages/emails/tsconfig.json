{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@saas-rbac/typescript-config/base.json",
  "compilerOptions": {
    "lib": [
      "ES2015"
    ],
    "module": "ESNext",
    "target": "ES6",
    "jsx": "react-jsx",
    "noEmit": true
  },
  "include": [
    "./src/**/*",
    "./src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}